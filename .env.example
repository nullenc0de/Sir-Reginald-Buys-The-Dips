# Alpaca API Configuration
# Get your API credentials from: https://app.alpaca.markets/paper/dashboard/overview
APCA_API_KEY_ID=your_alpaca_key_id_here
APCA_API_SECRET_KEY=your_alpaca_secret_key_here

# Trading Mode - ALWAYS start with paper trading
PAPER_TRADING=true

# Optional: Override default configuration
# MAX_POSITION_SIZE=0.10
# STOP_LOSS_PERCENT=0.03
# TAKE_PROFIT_PERCENT=0.06
# CIRCUIT_BREAKER_LOSS=0.05
# AI_CONFIDENCE_THRESHOLD=0.65

# Optional: Email alerts configuration (if implementing email notifications)
# ALERT_EMAIL=your-email@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# Optional: Advanced settings
# LOG_LEVEL=INFO
# MAX_CONCURRENT_POSITIONS=5
# RATE_LIMIT_BUFFER=0.8